{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["@playcanvas/react"],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": ["./src/components/*"],
      "@docs-components/*": ["./src/docs-components/*"],
      "@templates/*": ["./src/templates/*"],
      "@content/*": ["./src/content/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "mdx-components.js"
  ],
  "exclude": [
    "node_modules"
  ]
}