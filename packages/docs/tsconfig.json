{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": ["./components/*"],
      "@docs-components/*": ["./docs-components/*"],
      "@templates/*": ["./templates/*"],
      "@content/*": ["./content/*"],
      "@client-mdx-components": ["./client-mdx-components.js"],
      "@utils/*": ["./utils/*"],
      "@lib/*": ["./lib/*"],
      "@registry/*": ["./registry/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "mdx-components.js"
  ],
  "exclude": [
    "node_modules"
  ]
}