{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "moduleResolution": "bundler",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "rewriteRelativeImportExtensions": true
    },
    "include": [
      "packages/**/*.ts",
      "packages/**/*.tsx",
      "packages/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.js",
      "**/*.test.jsx"
    ]
  }